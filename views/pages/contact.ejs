<%- contentFor('container') %>
<div class="container">
    <div class='contact'>
        <h2>I can be reached on:</h2>
        <p>+234-814-014-6714, +234-808-286-2000</p>
        <h2>Or leave me an email with:</h2>
        <p>williamimoh@yahoo.com</p>
    </div>
    <form method="post" action="/addComment" class="contact-message">
        <h2>Leave a message below</h2>
        <div class="field">
            <label for="name" class="subject-name">Name</label>
            <div class="control">
                <input type="text" placeholder="Name" required>
            </div>
        </div>
        <div class="field">
            <label for="subject" class="subject">Subject</label>
            <div class="control">
                <input type="text" placeholder="Subject" required>
            </div>
        </div>
        <div class="field">
            <label for="message">Message</label>
            <div class="control">
                <textarea name="" id="" cols="30" rows="10"></textarea>
            </div>  
        </div>
        <div class="field">
            <div class="control">
                <button class="submit button is-link" type="submit">Submit Message</button>
            </div>
        </div>
    </form>
</div>